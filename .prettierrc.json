{
  "arrowParens": "always",
  "bracketSpacing": true,
  "insertPragma": false,
  "overrides": [
    {
      "files": [".mailmap"],
      "options": {
        "parser": "sh"
      }
    }
  ],
  "plugins": ["prettier-plugin-sh", "prettier-plugin-sort-json"],
  "printWidth": 90,
  "proseWrap": "always",
  "quoteProps": "as-needed",
  "requirePragma": false,
  "semi": true,
  "singleQuote": true,
  "tabWidth": 2,
  "trailingComma": "all",
  "useTabs": false
}
